{
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noEmit": true
  },
  "esModuleInterop": false,
  "allowSyntheticDefaultImports": false,
  "include": ["src/**/*"]
}
